        "noEmitOnError": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "sourceRoot": "src",
        "outDir": "dist",
        "lib":["es2015"]
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "client"
    ]
}